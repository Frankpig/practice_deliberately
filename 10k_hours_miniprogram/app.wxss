/* app.wxss */
/* 全局样式变量 - 森林风格 */
page {
  --text-primary: #3a5a40;
  --text-secondary: #588157;
  --text-tertiary: #74b7a8;
  --background-primary: #dad7cd;
  --background-secondary: #e9f5db;
  --card-background: #ffffff;
  --card-background-alt: #f1faee;
  --border-color: #a3b18a;
  --accent-color: #588157;
  --accent-color-light: #74b7a8;
  --error-color: #bc4749;
  --success-color: #48a14d;
  --warning-color: #f2cc8f;
  --info-color: #577590;
  --shadow-color: rgba(88, 129, 87, 0.1);
  --progress-bg: #e9f5db;
  --progress-fill: #588157;
  /* 保留原有变量以确保兼容性 */
  --text-color: var(--text-primary);
  --secondary-text-color: var(--text-secondary);
  --background-color: var(--background-primary);
  --card-background-color: var(--card-background);
  --card-shadow: 0 2px 8px var(--shadow-color);
  --primary-color: var(--accent-color-light);
  --secondary-color: var(--accent-color);
  --accent-color: var(--accent-color);
  --dark-accent-color: var(--text-primary);
  --progress-bar-background: var(--progress-bg);
  --progress-bar-gradient: linear-gradient(90deg, var(--accent-color-light), var(--accent-color));
  --border-color: var(--border-color);
  --input-background-color: var(--card-background);
  --error-color: var(--error-color);
}

/* 深色模式变量覆盖 - 森林暗色 */
page.dark-mode,
.container.dark-mode {
  --text-primary: #e9f5db;
  --text-secondary: #a3b18a;
  --text-tertiary: #74b7a8;
  --background-primary: #344e41;
  --background-secondary: #1e3a29;
  --card-background: #2d3f36;
  --card-background-alt: #2d3d36;
  --border-color: #4a654c;
  --accent-color: #74b7a8;
  --accent-color-light: #a3b18a;
  --error-color: #f28482;
  --success-color: #74b7a8;
  --warning-color: #e9c46a;
  --info-color: #8ecae6;
  --shadow-color: rgba(0, 0, 0, 0.3);
  --progress-bg: #1e3a29;
  --progress-fill: #74b7a8;
  /* 保留原有变量以确保兼容性 */
  --text-color: var(--text-primary);
  --secondary-text-color: var(--text-secondary);
  --background-color: var(--background-primary);
  --card-background-color: var(--card-background);
  --card-shadow: 0 2px 8px var(--shadow-color);
  --primary-color: var(--accent-color-light);
  --secondary-color: var(--accent-color);
  --accent-color: var(--accent-color);
  --dark-accent-color: var(--text-primary);
  --progress-bar-background: var(--progress-bg);
  --progress-bar-gradient: linear-gradient(90deg, var(--accent-color-light), var(--accent-color));
  --border-color: var(--border-color);
  --input-background-color: var(--card-background);
  --error-color: var(--error-color);
}

/* 基础样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  background-color: var(--background-color);
  color: var(--text-color);
}

.container {
  padding: 20rpx;
}

/* 标题样式 */
h1, h2, h3 {
  color: var(--text-color);
}

h1 {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

h2 {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0;
  padding-bottom: 10rpx;
  border-bottom: 3rpx solid var(--secondary-color);
  color: var(--dark-accent-color);
}

page.dark-mode h2 {
  color: var(--primary-color);
  border-bottom-color: var(--primary-color);
}

h3 {
  font-size: 30rpx;
  font-weight: bold;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-group label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.form-group input,
.form-group select {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: var(--card-background-color);
  color: var(--text-color);
  box-sizing: border-box;
}

/* 输入框焦点样式 */
.form-group input:focus,
.form-group select:focus {
  border-color: var(--secondary-color);
  box-shadow: 0 0 10rpx rgba(88, 129, 87, 0.3);
}

/* 深色模式下的输入框焦点样式 */
page.dark-mode .form-group input:focus,
page.dark-mode .form-group select:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 10rpx rgba(163, 177, 138, 0.4);
}

/* 微信小程序全局picker组件样式 */
/* 直接作用于picker组件 */
picker {
  font-size: 32rpx;
}

/* 选择器弹出层内容样式 - 更高优先级 */
.wx-picker-content {
  font-size: 40rpx !important;
  font-weight: 500;
}

/* 选择器弹出层容器样式 */
.picker-view {
  font-size: 40rpx !important;
}

/* 选择器弹出层列样式 */
.picker-view-column {
  font-size: 40rpx !important;
  line-height: 80rpx !important;
}

/* 特定选择器样式 */
.large-picker {
  font-size: 32rpx !important;
}

/* 按钮样式 */
.btn-primary {
  width: 100%;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--dark-accent-color);
  background-color: var(--primary-color);
  border: 2rpx solid var(--secondary-color);
  border-radius: 15rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary:active {
  background-color: var(--secondary-color);
  color: #ffffff;
  transform: scale(0.98);
}

/* 深色模式按钮样式 */
page.dark-mode .btn-primary {
  background-color: var(--primary-color);
  color: var(--dark-accent-color);
  border-color: var(--secondary-color);
}

page.dark-mode .btn-primary:active {
  background-color: var(--secondary-color);
  color: var(--text-color);
}

/* 错误信息样式 */
.error-message {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 60rpx 20rpx;
  color: var(--secondary-text-color);
}

/* skillProgress页面样式 */
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 120rpx;
  display: block;
}

.charts-wrapper {
  display: flex;
  flex-direction: column;
  gap: 100rpx;
}

/* 主题切换按钮 */
.theme-toggle {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  color: var(--dark-accent-color);
  background-color: var(--primary-color);
  border: 2rpx solid var(--secondary-color);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.theme-toggle:active {
  background-color: var(--secondary-color);
  color: #ffffff;
}

