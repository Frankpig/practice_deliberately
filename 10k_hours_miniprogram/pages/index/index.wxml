<!-- 首页 - 重新设计 -->
<view class="container {{darkModeClass}}" style="background-color: var(--background-color); min-height: 100vh; transition: background-color 0.3s ease;">
  <!-- 顶部区域 -->
  <view class="header">
    <view class="theme-toggle-btn" bindtap="toggleDarkMode">
      <text class="theme-icon">{{darkMode ? '☀️' : '🌙'}}</text>
    </view>
  </view>
  
  <!-- 英雄区域 -->
  <view class="hero-section">
    <view class="hero-content">
      <text class="greeting">{{greeting}}</text>
      <h1 class="hero-title">刻意练习</h1>
      <p class="hero-subtitle">记录10,000小时，见证你的成长</p>
    </view>
    
    <!-- 统计概览卡片 -->
    <view class="stats-overview" wx:if="hasSkills">
      <view class="stat-card">
        <text class="stat-value">{{totalSkills}}</text>
        <text class="stat-label">已学习技能</text>
      </view>
      <view class="stat-card">
        <text class="stat-value">{{totalHours}}</text>
        <text class="stat-label">总练习小时</text>
      </view>
      <view class="stat-card">
        <text class="stat-value">{{streakDays}}</text>
        <text class="stat-label">连续练习天数</text>
      </view>
    </view>
  </view>
  
  <!-- 今日目标 -->
  <view class="daily-goal" wx:if="hasSkills">
    <h2 class="section-title">今日目标</h2>
    <view class="goal-progress">
      <view class="goal-info">
        <text class="goal-label">今日已练习</text>
        <text class="goal-value">{{todayHours}} / {{dailyGoal}} 小时</text>
      </view>
      <view class="goal-bar-container">
        <view class="goal-bar" style="width: {{goalProgressPercentage}}%;"></view>
      </view>
    </view>
  </view>
  
  <!-- 快速操作 -->
  <view class="quick-actions">
    <h2 class="section-title">快速操作</h2>
    <view class="action-grid">
      <view class="action-card" bindtap="navigateToAddSkill">
        <div class="action-icon add-icon"></div>
        <h3>添加新技能</h3>
        <p>开始你的练习之旅</p>
      </view>
      
      <view class="action-card" bindtap="navigateToRecordPractice">
        <div class="action-icon record-icon"></div>
        <h3>记录练习时间</h3>
        <p>跟踪你的每一刻努力</p>
      </view>
      
      <view class="action-card" bindtap="navigateToSkillList">
        <div class="action-icon skills-icon"></div>
        <h3>我的技能</h3>
        <p>查看所有技能进度</p>
      </view>
      
      <view class="action-card" bindtap="navigateToStatistics">
        <div class="action-icon stats-icon"></div>
        <h3>数据统计</h3>
        <p>可视化你的成长历程</p>
      </view>
    </view>
  </view>
  
  <!-- 最近活动 -->
  <view class="recent-activities" wx:if="recentActivities.length > 0">
    <h2 class="section-title">最近活动</h2>
    <view class="activities-list">
      <block wx:for="{{recentActivities}}" wx:key="index">
        <view class="activity-item">
          <div class="activity-icon">{{item.icon}}</div>
          <div class="activity-info">
            <text class="activity-text">{{item.text}}</text>
            <text class="activity-time">{{item.time}}</text>
          </div>
        </view>
      </block>
    </view>
  </view>
  
  <!-- 激励语录 -->
  <view class="motivational-quote">
    <text class="quote-icon">💡</text>
    <p class="quote-text">{{motivationalQuote}}</p>
  </view>
</view>