page.dark-mode .action-card::before {
  opacity: 0.8;
}

page.dark-mode .action-icon,
page.dark-mode .activity-icon {
  background-color: rgba(163, 177, 138, 0.1);
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media screen and (min-width: 768px) {
  .container {
