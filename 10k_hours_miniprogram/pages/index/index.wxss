/* index.wxss */

/* 容器样式 */
.container {
  padding: 30rpx;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
}

/* 主题切换按钮 */
.theme-toggle {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  background-color: var(--card-background-color);
  color: var(--text-color);
}

/* 介绍文本样式 */
.intro {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

/* 快捷操作按钮 */
.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.action-button {
  background-color: var(--card-background-color);
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: var(--card-shadow);
  transition: transform 0.2s, box-shadow 0.2s;
}

.action-button:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

/* 深色模式下的按钮悬停效果 */
page.dark-mode .action-button:active {
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);
}

/* 按钮内文本样式 */
.action-button text:first-child {
  font-size: 32rpx;
  color: var(--text-color);
  font-weight: 500;
}

.action-button text:last-child {
  font-size: 26rpx;
  color: var(--secondary-text-color);
}

/* 按钮中的布局容器 */
.action-button view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}