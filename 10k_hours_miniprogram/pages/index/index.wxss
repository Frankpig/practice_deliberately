}

/* ÊúÄËøëÊ¥ªÂä® */
.recent-activities {
  margin-bottom: 50rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  background-color: var(--card-background-color);
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: var(--card-shadow);
