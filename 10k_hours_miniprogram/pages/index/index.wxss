  color: var(--secondary-text-color);
}

/* ÊøÄÂä±ËØ≠ÂΩï */
.motivational-quote {
  background-color: var(--card-background-color);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--card-shadow);
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.8s ease-out 1.2s both;
}

.motivational-quote::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(163, 177, 138, 0.15), transparent);
  border-radius: 50%;
  transform: translate(30%, -30%);
}

.quote-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.quote-text {
  font-size: 28rpx;
  color: var(--secondary-text-color);
  line-height: 1.6;
  margin: 0;
  flex: 1;
  font-style: italic;
}

/* Âä®ÁîªÂÆö‰πâ */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* Ê∑±Ëâ≤Ê®°ÂºèÁâπÂÆöÊ†∑ÂºèË∞ÉÊï¥ */
