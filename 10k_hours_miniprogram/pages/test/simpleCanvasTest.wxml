<view class="container">
  <text class="page-title">简单Canvas测试</text>
  
  <view class="canvas-container">
    <canvas 
      id="simpleCanvas" 
      canvas-id="simpleCanvas" 
      style="width: 100%; height: 300px;">
    </canvas>
  </view>
  
  <view class="controls">
    <button class="btn-primary" bindtap="drawTestChart">重新绘制</button>
    <button class="btn-primary" bindtap="clearCanvas">清空画布</button>
  </view>
</view>