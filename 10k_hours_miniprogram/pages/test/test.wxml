<!-- test.wxml -->
<view class="container" style="padding: 30rpx;">
  <h1 style="font-size: 48rpx; margin-bottom: 30rpx;">数据测试工具</h1>
  
  <view class="section" style="margin-bottom: 30rpx;">
    <h2 style="font-size: 36rpx; margin-bottom: 20rpx;">当前技能数据</h2>
    <view wx:if="{{skills.length === 0}}" style="color: #999;">暂无技能数据</view>
    <view wx:else>
      <view wx:for="{{skills}}" wx:key="id" class="skill-item" style="padding: 20rpx; border: 1rpx solid #eee; margin-bottom: 10rpx;">
        <text style="font-size: 32rpx;">{{index + 1}}. {{item.name}} ({{item.hoursPracticed}}/{{item.targetHours}}小时)</text>
      </view>
    </view>
    <text style="font-size: 28rpx; color: #999; margin-top: 10rpx; display: block;">技能总数: {{skills.length}}</text>
  </view>
  
  <view class="section" style="margin-bottom: 30rpx;">
    <h2 style="font-size: 36rpx; margin-bottom: 20rpx;">手动添加测试技能</h2>
    <input placeholder="技能名称" bindinput="onSkillNameInput" value="{{testSkillName}}" style="width: 100%; padding: 20rpx; border: 1rpx solid #ddd; margin-bottom: 20rpx;"/>
    <button bindtap="addTestSkill" type="primary" style="width: 100%;">添加测试技能</button>
  </view>
  
  <view class="section">
    <h2 style="font-size: 36rpx; margin-bottom: 20rpx;">数据操作</h2>
    <button bindtap="refreshData" style="width: 100%; margin-bottom: 20rpx;">刷新数据</button>
    <button bindtap="saveData" type="primary" style="width: 100%; margin-bottom: 20rpx;">保存数据到存储</button>
    <button bindtap="loadData" style="width: 100%; margin-bottom: 20rpx;">从存储加载数据</button>
    <button bindtap="clearData" type="warn" style="width: 100%;">清除所有数据</button>
  </view>
  
  <view class="section" style="margin-top: 30rpx;">
    <h2 style="font-size: 36rpx; margin-bottom: 20rpx;">调试信息</h2>
    <textarea value="{{debugInfo}}" disabled="true" style="width: 100%; height: 300rpx; padding: 20rpx; border: 1rpx solid #ddd; font-size: 24rpx;"></textarea>
  </view>
</view>