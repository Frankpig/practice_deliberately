.container {
  padding: 20rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 60rpx;
  display: block;
}

.canvas-container {
  border: 2rpx solid var(--border-color);
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  background-color: var(--card-bg);
}

.controls {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.btn-primary {
  width: 48%;
}

.info {
  text-align: center;
  color: var(--text-color);
  font-size: 28rpx;
}