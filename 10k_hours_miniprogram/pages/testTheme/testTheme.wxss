/* 主题测试页面样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
}

.content {
  max-width: 800rpx;
  margin: 0 auto;
}

.theme-toggle-btn {
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.current-mode {
  font-size: 28rpx;
  font-weight: 500;
}

.test-card {
  transition: all 0.3s ease;
}

.nav-buttons {
  margin-top: 60rpx;
}

.nav-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: block;
  width: 100%;
  text-align: center;
  transition: all 0.3s ease;
}