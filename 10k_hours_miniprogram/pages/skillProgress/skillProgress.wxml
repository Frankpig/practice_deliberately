<!-- skillProgress.wxml -->
<view class="container {{darkModeClass}}" style="background-color: var(--background-color); min-height: 100vh; padding: 30rpx;">
  <h2 style="color: var(--text-color);">技能练习进度</h2>
  
  <view wx:if="{{skills.length === 0}}" class="empty" style="text-align: center; padding: 60rpx 20rpx; color: var(--secondary-text-color);">
    <p>暂无技能数据，请先添加技能</p>
  </view>
  
  <view wx:else style="display: flex; flex-direction: column; gap: 30rpx;">
    <!-- 饼图容器 -->
    <view class="chart-container" style="background-color: var(--card-background-color); padding: 20rpx; border-radius: 15rpx; box-shadow: var(--card-shadow);">
      <view style="text-align: center; margin-bottom: 20rpx;">
        <text style="font-size: 30rpx; color: var(--text-color); font-weight: bold;">技能练习时间分布</text>
      </view>
      <view class="pie-chart" style="width: 100%; height: 400rpx;">
        <!-- 在实际开发中，这里会使用ec-canvas组件 -->
        <canvas canvas-id="pieCanvas" style="width: 100%; height: 100%;"></canvas>
      </view>
    </view>
    
    <!-- 柱状图容器 -->
    <view class="chart-container" style="background-color: var(--card-background-color); padding: 20rpx; border-radius: 15rpx; box-shadow: var(--card-shadow);">
      <view style="text-align: center; margin-bottom: 20rpx;">
        <text style="font-size: 30rpx; color: var(--text-color); font-weight: bold;">技能练习进度</text>
      </view>
      <view class="bar-chart" style="width: 100%; height: 400rpx;">
        <!-- 在实际开发中，这里会使用ec-canvas组件 -->
        <canvas canvas-id="barCanvas" style="width: 100%; height: 100%;"></canvas>
      </view>
    </view>
  </view>
</view>