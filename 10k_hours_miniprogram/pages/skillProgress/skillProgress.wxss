/* skillProgress.wxss */

/* 图表容器样式 */
.chart-container {
  background-color: var(--card-background-color);
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: var(--card-shadow);
  margin-top: 20rpx;
}

/* 饼图容器样式 */
.pie-chart {
  width: 100%;
  height: 500rpx;
}

/* 柱状图容器样式 */
.bar-chart {
  width: 100%;
  height: 1050rpx; /* 进一步增加高度以适应更大的画布和下边距 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 60rpx 20rpx;
  color: var(--secondary-text-color);
}

/* 图表标题样式 */
.chart-title {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: var(--text-color);
  font-weight: bold;
}