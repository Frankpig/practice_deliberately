/* skillProgress.wxss */

/* 图表容器样式 */
.chart-container {
  background-color: var(--card-background-color);
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: var(--card-shadow);
}

/* 饼图和柱状图容器样式 */
.pie-chart,
.bar-chart {
  width: 100%;
  height: 400rpx;
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 60rpx 20rpx;
  color: var(--secondary-text-color);
}

/* 图表标题样式 */
.chart-container view:first-child {
  text-align: center;
  margin-bottom: 20rpx;
}

.chart-container text {
  font-size: 30rpx;
  color: var(--text-color);
  font-weight: bold;
}