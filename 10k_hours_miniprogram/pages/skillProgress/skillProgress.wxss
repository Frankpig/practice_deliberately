/* skillProgress.wxss */

/* 页面容器样式 */
.container {
  transition: background-color 0.3s ease;
}

/* 页面标题样式 - 增强视觉效果 */
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-color);
  text-align: center;
  margin: 30rpx 0 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
}

/* 图表容器样式 - 美化卡片效果 */
.chart-container {
  background-color: var(--card-background-color);
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: var(--card-shadow);
  margin-top: 30rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 为卡片添加微妙的装饰效果 */
.chart-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #a3b18a, #588157, #3a5a40);
}

/* 饼图容器样式 - 调整尺寸和居中 */
.pie-chart {
  width: 100%;
  height: 480rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 柱状图容器样式 - 优化高度和布局 */
.bar-chart {
  width: 100%;
  height: 900rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 空状态样式 - 美化空状态显示 */
.empty {
  text-align: center;
  padding: 120rpx 40rpx;
  color: var(--secondary-text-color);
  background-color: var(--card-background-color);
  border-radius: 24rpx;
  margin: 60rpx 20rpx;
  box-shadow: var(--card-shadow);
}

.empty text {
  font-size: 32rpx;
  line-height: 1.6;
}

/* 图表标题样式 - 增强标题显示 */
.chart-title {
  text-align: center;
  margin-bottom: 25rpx;
  font-size: 34rpx;
  color: var(--text-color);
  font-weight: 600;
  letter-spacing: 2rpx;
  position: relative;
}

/* 为标题添加下划线装饰 */
.chart-title::after {
  content: '';
  display: block;
  width: 80rpx;
  height: 4rpx;
  background-color: var(--accent-color, #588157);
  margin: 10rpx auto 0;
  border-radius: 2rpx;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .chart-container {
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
  }
}

/* 添加动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-up {
  animation: fadeInUp 0.6s ease forwards;
}

.update-info {
  text-align: center;
  margin-top: 50rpx;
  padding: 20rpx;
}

.update-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.7;
}

/* 淡入上移动画 */
@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-up {
  animation: fade-in-up 0.6s ease-out;
}