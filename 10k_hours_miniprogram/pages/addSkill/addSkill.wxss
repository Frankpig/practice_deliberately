/* addSkill.wxss - 现代化添加技能页面样式 */

/* 页面容器 */
.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  opacity: 0;
  transform: translateY(-20rpx);
  animation: fadeInUp 0.6s ease-out forwards;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin: 0 0 15rpx 0;
  color: var(--text-color);
  /* 移除渐变色，与其他页面保持一致 */
}

.page-subtitle {
  font-size: 26rpx;
  color: var(--secondary-text-color);
  margin: 0;
  opacity: 0.85;
}

/* 技能卡片 */
.skill-card {
  background-color: var(--card-background-color);
  border-radius: 20rpx;
  box-shadow: var(--card-shadow);
  padding: 40rpx;
  margin-bottom: 40rpx;
  opacity: 0;
  transform: translateY(30rpx);
  animation: fadeInUp 0.6s ease-out 0.2s forwards;
  border: 1px solid var(--border-color, transparent);
  transition: all 0.3s ease;
}

.skill-card:hover {
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.1);
  transform: translateY(25rpx);
}

/* 表单样式 */
.skill-form {
  width: 100%;
}

.form-group {
  margin-bottom: 40rpx;
  position: relative;
}

.input-wrapper {
  position: relative;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  padding: 36rpx 24rpx; /* 增加上下内边距使输入框更高 */
  font-size: 28rpx;
  border: 2rpx solid var(--border-color, #e0e0e0);
  border-radius: 15rpx;
  background-color: var(--input-background-color);
  color: var(--text-color);
  box-sizing: border-box;
  transition: all 0.35s ease;
  line-height: 1.5;
  position: relative;
  z-index: 1;
  min-height: 120rpx; /* 设置最小高度确保输入框足够高 */
}

.form-input::placeholder {
  color: var(--secondary-text-color);
  opacity: 0.7;
}

/* 输入框焦点动画 */
.form-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(97, 218, 251, 0.2);
  transform: translateY(-2rpx);
  outline: none;
}

.form-input:focus + .input-hint {
  color: var(--primary-color);
}

/* 输入提示文本 */
.input-hint {
  font-size: 24rpx;
  color: var(--secondary-text-color);
  margin-top: 10rpx;
  transition: all 0.3s ease;
}

/* 错误信息样式 */
.error-message {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: rgba(255, 77, 79, 0.1);
  border: 1px solid rgba(255, 77, 79, 0.3);
  border-radius: 12rpx;
  margin: 20rpx 0;
  animation: shake 0.5s ease-in-out;
  transition: all 0.3s ease;
}

.error-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  color: white;
  font-size: 22rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.error-text {
  font-size: 26rpx;
  color: #ff4d4f;
  flex: 1;
}

/* 添加按钮样式 */
.add-button {
  width: 100%;
  padding: 30rpx 0;
  background-color: var(--primary-color);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 15rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(97, 218, 251, 0.4);
}

.add-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.add-button:hover::before {
  left: 100%;
}

.button-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
  font-weight: normal;
}

/* 按钮按下效果 */
.button-hover {
  transform: translateY(2rpx) scale(0.99);
  box-shadow: 0 2rpx 10rpx rgba(97, 218, 251, 0.3);
}

/* 提示卡片 */
.tips-card {
  background-color: var(--card-background-color);
  border-radius: 20rpx;
  box-shadow: var(--card-shadow);
  padding: 35rpx;
  opacity: 0;
  transform: translateY(30rpx);
  animation: fadeInUp 0.6s ease-out 0.4s forwards;
  border-left: 6rpx solid var(--secondary-color);
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin: 0 0 15rpx 0;
  display: flex;
  align-items: center;
}

.tips-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--secondary-text-color);
  margin: 0;
}

/* 深色模式特定样式 */
page.dark-mode .skill-card {
  background-color: var(--card-background-color);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

page.dark-mode .tips-card {
  background-color: var(--card-background-color);
  border-left: 6rpx solid var(--secondary-color);
}

page.dark-mode .add-button {
  color: var(--dark-text-color, #2a2a2a);
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  50% { transform: translateX(5rpx); }
  75% { transform: translateX(-5rpx); }
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 600rpx;
    margin: 0 auto;
    padding-top: 80rpx;
  }
  
  .skill-card,
  .tips-card {
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.12);
  }
}