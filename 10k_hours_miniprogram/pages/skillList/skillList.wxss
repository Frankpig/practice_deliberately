/* 技能列表页面 - 重制版样式 */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  padding: 40rpx 30rpx 120rpx;
  transition: background-color 0.3s ease;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.page-title {
  margin: 0;
  color: var(--text-color);
  font-size: 44rpx;
  font-weight: 700;
}

.skill-count {
  color: var(--secondary-text-color);
  font-size: 28rpx;
  background-color: var(--secondary-background);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  margin: 0 0 20rpx 0;
  color: var(--text-color);
  font-size: 36rpx;
  font-weight: 600;
}

.empty-description {
  margin: 0;
  color: var(--secondary-text-color);
  font-size: 28rpx;
  line-height: 1.5;
}

/* 技能列表 */
.skill-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 技能卡片 */
.skill-card {
  background-color: var(--card-background-color);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: var(--card-shadow);
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  color: var(--text-color);
}

.skill-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--progress-bar-gradient);
  transform: translateX(-100%);
  transition: transform 0.5s ease;
}

.skill-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border-color: var(--primary-color);
}

.skill-card:active::before {
  transform: translateX(0);
}

/* 卡片头部 */
.skill-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.skill-name {
  margin: 0;
  color: var(--text-color);
  font-size: 34rpx;
  font-weight: 600;
  flex: 1;
  cursor: pointer;
  transition: color 0.2s ease;
}

.skill-name:active {
  color: var(--primary-color);
}

.skill-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 技能阶段 */
.skill-stage {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  background-color: var(--primary-color);
  color: var(--light-accent-color);
  border-radius: 30rpx;
  border: 1px solid var(--secondary-color);
}

/* 删除按钮 */
.delete-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: var(--card-background-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  border: 1px solid var(--border-color);
}

.delete-btn:active {
  background-color: var(--error-color);
  transform: scale(0.9);
}

.delete-icon {
  font-size: 32rpx;
  color: var(--secondary-text-color);
  font-weight: 600;
  transition: color 0.2s ease;
}

.delete-btn:active .delete-icon {
  color: white;
}

/* 进度区域 */
.progress-section {
  margin-bottom: 24rpx;
}

.progress-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

/* 进度条 */
.progress-bar-container {
  flex: 1;
  height: 36rpx;
  background-color: var(--progress-bar-background);
  border-radius: 20rpx;
  overflow: hidden;
  border: 1px solid var(--border-color);
  position: relative;
}

.progress-bar {
  height: 100%;
  background: var(--progress-bar-gradient);
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.progress-glow {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: glow 2s infinite;
}

@keyframes glow {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.progress-percentage {
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: 700;
  min-width: 100rpx;
  text-align: right;
}

/* 小时数信息 */
.hours-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.current-hours {
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: 600;
}

.separator {
  color: var(--secondary-text-color);
  font-size: 28rpx;
}

.target-hours {
  color: var(--secondary-text-color);
  font-size: 26rpx;
}

/* 预计完成时间 */
.estimated-time {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding-top: 20rpx;
  border-top: 1px solid var(--border-color);
}

.time-label {
  color: var(--secondary-text-color);
  font-size: 24rpx;
}

.time-value {
  color: var(--text-color);
  font-size: 24rpx;
  font-weight: 500;
}

/* 添加提示 */
.add-hint {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.add-hint text {
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

/* 深色模式特殊样式 */
.dark-mode .add-hint text {
  background-color: rgba(255, 255, 255, 0.15);
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.skill-card {
  animation: fadeInUp 0.5s ease-out;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .page-container {
    max-width: 800rpx;
    margin: 0 auto;
  }
}