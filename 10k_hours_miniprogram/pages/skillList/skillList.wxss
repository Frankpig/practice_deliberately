/* skillList.wxss */

/* 技能卡片容器 */
.skill-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 60rpx;
}

/* 技能卡片样式 */
.skill-card {
  background-color: var(--card-background-color);
  padding: 35rpx;
  border-radius: 20rpx;
  box-shadow: var(--card-shadow);
  border: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
}

/* 卡片激活效果 */
.skill-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
  border-color: var(--secondary-color);
}

/* 深色模式下的卡片效果 */
page.dark-mode .skill-card:active {
  box-shadow: 0 4px 15px rgba(163, 177, 138, 0.2);
}

/* 技能头部样式 */
.skill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 技能名称样式 */
.skill-header h3 {
  margin: 0;
  color: var(--text-color);
  font-size: 30rpx;
  font-weight: bold;
}

/* 技能阶段样式 */
.skill-stage {
  font-size: 24rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  background-color: var(--primary-color);
  color: var(--dark-accent-color);
  border-radius: 30rpx;
  border: 1rpx solid var(--secondary-color);
}

/* 进度条容器样式 */
.progress-bar-container {
  width: 100%;
  height: 35rpx;
  background-color: var(--progress-bar-background);
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
  border: 1rpx solid var(--border-color);
}

/* 进度条样式 */
.progress-bar {
  height: 100%;
  background: var(--progress-bar-gradient);
  transition: width 0.5s ease;
  border-radius: 20rpx;
}

/* 深色模式下的进度条样式 - 使用新的颜色方案 */
page.dark-mode .progress-bar {
  background: var(--progress-bar-gradient);
}

/* 进度文本样式 */
.progress-text {
  font-size: 24rpx;
  color: var(--secondary-text-color);
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 60rpx 20rpx;
  color: var(--secondary-text-color);
}